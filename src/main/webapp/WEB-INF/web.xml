<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AuthLoginServlet</servlet-name>
        <servlet-class>Controllers.Auth.AuthLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicStartSerlvet</servlet-name>
        <servlet-class>Controllers.Public.PublicStartSerlvet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthDispatchServlet</servlet-name>
        <servlet-class>Controllers.Auth.AuthDispatchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthRegisterServlet</servlet-name>
        <servlet-class>Controllers.Auth.AuthRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicCartServlet</servlet-name>
        <servlet-class>Controllers.Public.PublicCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>log-in</servlet-name>
        <url-pattern>/log-in</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicStartSerlvet</servlet-name>
        <url-pattern>/PublicStartSerlvet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guest</servlet-name>
        <url-pattern>/guest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login-facebook</servlet-name>
        <url-pattern>/login-facebook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login-google</servlet-name>
        <url-pattern>/login-google</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign-up</servlet-name>
        <url-pattern>/sign-up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicCartServlet</servlet-name>
        <url-pattern>/PublicCartServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>PublicStartSerlvet</welcome-file>
    </welcome-file-list>
</web-app>
